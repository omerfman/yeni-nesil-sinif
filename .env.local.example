# Firebase Configuration (Client-side - Public)
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin (Server-side - Functions)
# Download service account JSON from Firebase Console > Project Settings > Service Accounts
# Put the file path here or paste the entire JSON as a string
FIREBASE_SERVICE_ACCOUNT=./path-to-service-account.json

# Initial Admin User
# This email will be granted admin role via scripts/seedAdmin.js
INITIAL_ADMIN_EMAIL=admin@example.com

# Vercel (Optional)
# These are auto-populated by Vercel, but you can override if needed
VERCEL_URL=
VERCEL_ENV=
